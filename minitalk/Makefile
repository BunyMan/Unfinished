
SERVER   = server
CLIENT   = client
CC	     = cc
FLAGS    = -Wall -Werror -Wextra
LIBS	 = -L./libft -lft
LIBFT	 = libft.a

# COLORS #

GREEN		=	\033[0;32m
YELLOW		=	\033[0;33m
RED			=	\033[0;31m
O			=   \033[38;5;214m
R       =   \033[0m

all : $(LIBFT) $(SERVER) $(CLIENT)
		@echo
		@printf "                                    \r"
		@printf "\033[2;32m               DONE!            \r"
		@sleep 0.7
		@printf "\033[1;;32m               DONE!          \n"
		@sleep 0.8

$(LIBFT) :
	@make -C libft

$(SERVER) : main_server.o error.o includes/minitalk.h
	@$(CC) main_server.o error.o $(LIBS) -o $@

$(CLIENT) : main_client.o error.o includes/minitalk.h
	@$(CC) main_client.o error.o $(LIBS) -o $@

%.o : %.c
	@$(CC) $(FLAGS) $< -c -I includes

clean :
	@make clean -C libft
	@rm -f *.o

fclean: clean
	@make fclean -C libft
	@rm -f $(SERVER) $(CLIENT)
	@printf "\033[1;91m       REMOVING ALL .o FILES\r"
		@sleep 0.5
		@printf "       REMOVING ALL .o FILES .\r"
		@sleep 0.5
		@printf "       REMOVING ALL .o FILES . . \r"
		@sleep 0.5
		@printf "       REMOVING ALL .o FILES . . . \r"
		@sleep 0.5
		@printf "                                     \r"
		@printf "\033[1;;32m               DONE!\n\r"

re: fclean all

ap: all fclean

katchow:
		@printf "\033[1;91m                           ,,,,,,.,,,,.,.,,,                                       \n\
