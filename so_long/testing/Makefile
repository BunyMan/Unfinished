NAME = so_long
CC = cc 
FLAGS = -Wall -Wextra -Werror
RM = -rm -rf
SRC	= srcs/so_long.c
HEADER = /includes

G			=	\033[0;32m
Y			=	\033[0;33m
R			=	\033[0;91m
O			=   \033[38;5;214m
WO			=	\033[38;5;202m 
WG			=	\033[38;5;034m
WB			=	\033[38;5;026m
WY			=	\033[38;5;220m
MS			=	\033[38;5;216m
MB			=	\033[38;5;130m
MY			=	\033[38;5;226m
RESET      	=  	\033[0m

all : $(NAME)
	@printf "                                    \r"
		@printf "\033[2;32m               DONE!            \r"
		@sleep 0.7
		@printf "\033[1;;32m               DONE!          \n"

$(NAME) :
		@$(CC) $(FLAGS) -o $(NAME) $(SRC) -I /usr/local/include -L /usr/local/lib/ -lmlx -framework OpenGL -framework Appkit -I.$(HEADER) 

clean : 
	@rm -f *.o

fclean: clean
	@rm -f $(NAME)
	@rm -f *.o
	@printf "\033[1;91m       REMOVING ALL .o FILES\r"
		@sleep 0.2
		@printf "       REMOVING ALL .o FILES .\r"
		@sleep 0.2
		@printf "       REMOVING ALL .o FILES . . \r"
		@sleep 0.2
		@printf "       REMOVING ALL .o FILES . . . \r"
		@sleep 0.2
		@printf "                                     \r"
		@printf "\033[1;;32m               DONE!\n\r"

re: fclean all

